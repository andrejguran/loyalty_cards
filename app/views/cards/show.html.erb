<% title "Card" %>

<p>
  <strong>Title:</strong>
  <%= @card.title %>
</p>
<p>
  <strong>Price:</strong>
  <%= @card.price %>
</p>
<p>
  <strong>Description:</strong>
  <%= @card.description %>
</p>
<p>
  <strong>Image Url:</strong>
  <%= @card.image_url %>
</p>

<p>
  <%= link_to "Edit", edit_card_path(@card) %> |
  <%= link_to "Destroy", @card, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", cards_path %>
</p>
